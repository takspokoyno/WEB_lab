@model Labka1.Models.Part

@{
    ViewData["Title"] = "Створити";
}
    
<h1>Додавання нової запчастини</h1>

<h4>Запчастини</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="CarId" class="control-label"></label>
                <label>aboba</label>*@
                <input type="hidden" asp-for="CarId" value="@ViewBag.currentCar.Id" />
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", "Parts",routeValues: new{carId = @ViewBag.currentCar.Id, brand = @ViewBag.CarBrand, model = @ViewBag.CarModel})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

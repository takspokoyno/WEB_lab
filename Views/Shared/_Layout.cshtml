<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Drift Paradise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_state.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Labka1.styles.css" asp-append-version="true" />
    <meta name="description" content="Дріфт-турніри світу, їх учасники та задіяні авто" />
    <meta name="keywords" content="drift, cars, дріфт, автомобілі" />
    <style type="text/css">
        .aboba {
            float: right; 
            margin-right: 20px;
        }
        #footer {
        position: fixed; /* Фиксированное положение */
        right: 10px; bottom: 5px; /* Правий нижний угол */
        padding: 5px; /* Поля вокруг текста */
        background: black; /* Цвет фона */
        color: #555!important; /* Цвет текста */
        width: 25%; /* Ширина слоя */
        border: solid;
        border-radius: 20px;
        border-width: 2px;
        border-color: #555!important;
        text-align: center;
   } 
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Drift Paradise</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">Автомобілі</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="Index">Команди</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tournaments" asp-action="Index">Турніри</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Налаштування</a>
                        </li>
                        <li />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                 <a class="nav-link text-dark">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input style="border: none; background: none;" type="submit" value="Вийти" class="nav-link text-dark"/>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Вхід</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Реєстрація</a>
                            </li> 
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted"> 
        <div>
            &copy; 2022 - Labka1 by Vladyslav Burlaka and Dmytro Lytvynenko
        </div>
    </footer>

    <div id="footer">
       Contact information: <a href="https://t.me/tak_spokoyno"><img src="https://i.postimg.cc/2y0Fp5jf/pngwing-com.png" style="width:10%;height:10%;"></a> <a href="mailto:vladburlaka2003@gmail.com"><img src="https://i.postimg.cc/dtznJLmq/png-transparent-google-mail-gmail-logo-icon.png" style="width:13%;height:13%;"></a>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
